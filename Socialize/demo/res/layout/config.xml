<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/config_layout"
	    android:background="#000000"
	    android:orientation="vertical"
	    android:padding="8dip">
	    
		<CheckBox 
		    	android:id="@+id/chkRequireAuth"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Always Prompt Auth"
		        android:textSize="14dip"/>  
		        
		<CheckBox 
		    	android:id="@+id/chkPromptForShare"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Always Prompt for Share"
		        android:textSize="14dip"/>  		
		        
		<CheckBox android:id="@+id/chkAllowAnon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Allow Users to Skip Auth"
		        android:textSize="14dip"/> 
		        
		<CheckBox 
		    	android:id="@+id/chkAllowAnonComment"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Allow Users to Skip Auth on Comments"
		        android:textSize="14dip"/>
		
		<CheckBox 
		    	android:id="@+id/chkAllowSkipAuth"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Allow Users to Save Auth Preference"
		        android:textSize="14dip"/>		
		        
		<CheckBox 
		    	android:id="@+id/chkFB"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Facebook Enabled"
		        android:textSize="14dip"/>  
		        
		<CheckBox 
		    	android:id="@+id/chkTW"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Twitter Enabled"
		        android:textSize="14dip"/>  			
		        
		<CheckBox 
		    	android:id="@+id/chkFBSSO"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="FB Single Sign On Enabled"
		        android:textSize="14dip"/>  
		        
		<CheckBox 
		    	android:id="@+id/chkDiagnostic"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Diagnostic Logging Enabled"
		        android:textSize="14dip"/>  	
		        
	</LinearLayout>

</ScrollView>